@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        @if ((await AuthorizationService.AuthorizeAsync(User, "Customer")).Succeeded)
        {
            <li class="navbar-link"><a asp-controller="Account" asp-action="Profile">@User.Identity.Name</a></li>
        }
        else
        {
            <li class="navbar-text">Hello @User.Identity.Name!</li>
        }
                
        <li><a asp-controller="Account" asp-action="SignOut">Sign out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="SignIn">Sign in</a></li>
    </ul>
}
