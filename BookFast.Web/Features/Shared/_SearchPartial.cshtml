<form asp-controller="home" asp-action="Search" method="get" class="navbar-form navbar-right">
    <div class="form-group">
        <label class="sr-only" for="searchText">Search text</label>
        <input type="search" class="form-control" id="searchText" name="searchText"
               value="@ViewBag.SearchText" placeholder="Enter search term..." autocomplete="off">
    </div>
    <button type="submit" class="btn btn-default">Search</button>
    <input type="hidden" name="page" id="page" value="@ViewBag.Page" />
</form>